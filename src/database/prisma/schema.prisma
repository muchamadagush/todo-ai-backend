
generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mysql"
	url      = env("DATABASE_URL")
}

model Task {
	id           String      @id @default(uuid())
	title        String      @db.VarChar(255)
	description  String?     @db.Text
	priority     Int
	deadline     DateTime?
	status       TaskStatus
	ai_generated Boolean     @default(false)
	created_at   DateTime    @default(now())
	updated_at   DateTime    @updatedAt
	dependencies TaskDependency[] @relation("TaskDependencies")
	dependents   TaskDependency[] @relation("TaskDependents")
}

model TaskDependency {
	id                String @id @default(uuid())
	task_id           String
	depends_on_task_id String
	task              Task   @relation("TaskDependencies", fields: [task_id], references: [id])
	dependsOn         Task   @relation("TaskDependents", fields: [depends_on_task_id], references: [id])
}

model AiLog {
	id          String      @id @default(uuid())
	feature     String      @db.VarChar(100)
	prompt      String      @db.Text
	response    String      @db.Text
	tokens_used Int
	status      AiLogStatus
	created_at  DateTime    @default(now())
}

enum TaskStatus {
	todo
	doing
	done
}

enum AiLogStatus {
	success
	failed
}
